{
    "name": "z80uploader",
    "version": "1.0.2",
    "private": true,
    "author": "@sinnaj-r",
    "build": {
        "appId": "de.jannisrosenbaum.z80uploader",
        "productName": "z80 Uploader",
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "mac": {
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist"
        }
    },
    "homepage": ".",
    "description": "z80 Uploader - The easy way to transfer programms to your z80",
    "main": "public/electron.js",
    "dependencies": {
        "@ant-design/icons": "^4.2.1",
        "@serialport/bindings": "^9.0.0",
        "@serialport/stream": "^9.0.0",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/jest": "^24.0.0",
        "@types/lodash": "^4.14.158",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/serialport": "^8.0.1",
        "antd": "^4.5.1",
        "cross-env": "^7.0.2",
        "electron-is-dev": "^1.2.0",
        "immer": "^7.0.7",
        "lodash": "^4.17.19",
        "nrf-intel-hex": "^1.3.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "3.4.1",
        "typescript": "~3.7.2"
    },
    "scripts": {
        "react-start": "react-scripts start",
        "react-build": "react-scripts build",
        "react-test": "react-scripts test --env=jsdom",
        "react-eject": "react-scripts eject",
        "electron-build": "electron-builder",
        "release": "yarn react-build && electron-builder -m dmg -l -w portable --publish=onTag",
        "build": "yarn react-build",
        "build-full": "yarn react-build && yarn electron-build",
        "build-all": "yarn react-build && electron-builder -m dmg -l -w portable",
        "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@serialport/binding-mock": "^9.0.0",
        "concurrently": "^5.2.0",
        "electron": "^9.1.2",
        "electron-builder": "^22.8.0",
        "wait-on": "^5.1.0"
    }
}
